cmake_minimum_required(VERSION 3.11)
project(${PROJECT_NAME})

message(STATUS "")
message(STATUS "THIRD_PARTY_NAME: ${PROJECT_NAME}")
message(STATUS "THIRD_PARTY_VERSION: ${PROJECT_VERSION}")
message(STATUS "THIRD_PARTY_DESCRIPTION: ${PROJECT_DESCRIPTION}")
message(STATUS "THIRD_PARTY_HOMEPAGE_URL: ${PROJECT_HOMEPAGE_URL}")
message(STATUS "THIRD_PARTY_INSTALL_PATH: ${${PROJECT_NAME}_INSTALL_PATH}")
message(STATUS "THIRD_PARTY_CMAKE_ARGS: ${${PROJECT_NAME}_CMAKE_ARGS}\n")

include(ExternalProject)
ExternalProject_Add(
  ${PROJECT_NAME}
  GIT_REPOSITORY ${PROJECT_HOMEPAGE_URL}
  GIT_TAG ${${PROJECT_NAME}_GIT_TAG}
  PREFIX ${${PROJECT_NAME}_PREFIX}
  CMAKE_ARGS ${${PROJECT_NAME}_CMAKE_ARGS}
)
